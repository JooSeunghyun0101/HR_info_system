# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================

# Supabase Project URL
SUPABASE_URL="https://wineokguvgpcffcrjqkj.supabase.co"

# Supabase API Keys
# Get these from: Project Settings → API
SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# ============================================================================
# JWT CONFIGURATION
# ============================================================================

# JWT Secret for token signing
JWT_SECRET="your-secure-jwt-secret-here-change-in-production"
JWT_ACCESS_TOKEN_EXPIRY="1h"
JWT_REFRESH_TOKEN_EXPIRY="7d"

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Server Port
PORT=3000

# Node Environment
NODE_ENV="development"

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:5173,http://localhost:3000"

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================

# Upload directory (relative to project root)
UPLOAD_DIR="./uploads"

# Max file sizes (in bytes)
MAX_IMAGE_SIZE=5242880  # 5MB
MAX_DOCUMENT_SIZE=10485760  # 10MB

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Bcrypt cost factor (10-12 recommended)
BCRYPT_ROUNDS=12

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# EMAIL CONFIGURATION (for future use)
# ============================================================================

# SMTP settings for sending invitation emails
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@company.com"
SMTP_PASSWORD="your-email-password"
SMTP_FROM="HR Platform <noreply@company.com>"

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level: error, warn, info, debug
LOG_LEVEL="info"

